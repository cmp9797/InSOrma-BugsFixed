<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contextClickable="true"
    android:orientation="vertical"
    android:textAlignment="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnDelete"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="65dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:backgroundTint="#F44336"
            android:drawableLeft="@drawable/ic_baseline_delete_forever_35"
            android:textAlignment="center"
            app:cornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txtTitleUsername"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Username"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitleUsername"
        android:layout_alignStart="@+id/txtTitleUsername"
        android:layout_marginTop="-1dp"
        android:ems="10"
        android:hint="input username here..."
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/txtTitleUsername"
        app:layout_constraintStart_toStartOf="@+id/txtTitleUsername"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleUsername" />

    <TextView
        android:id="@+id/txtContentUsername"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitleUsername"
        android:layout_alignStart="@+id/txtTitleUsername"
        android:layout_alignEnd="@+id/txtTitleUsername"
        android:layout_marginTop="8dp"
        android:text="Username"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtTitleUsername"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtTitleUsername"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleUsername" />

    <TextView
        android:id="@+id/txtTitleEmail"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitleUsername"
        android:layout_alignStart="@+id/txtContentUsername"
        android:layout_alignEnd="@+id/txtContentUsername"
        android:layout_marginTop="58dp"
        android:text="Email"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtTitleUsername"
        app:layout_constraintStart_toStartOf="@+id/txtTitleUsername"
        app:layout_constraintTop_toTopOf="@+id/edtUsername" />

    <TextView
        android:id="@+id/txtContentEmail"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitleEmail"
        android:layout_alignStart="@+id/txtTitleEmail"
        android:layout_alignEnd="@+id/txtTitleEmail"
        android:layout_marginTop="8dp"
        android:text="Email"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtTitleEmail"
        app:layout_constraintStart_toStartOf="@+id/txtTitleEmail"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleEmail" />

    <TextView
        android:id="@+id/txtTitlePhone"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtContentEmail"
        android:layout_alignStart="@+id/txtContentEmail"
        android:layout_alignEnd="@+id/txtContentEmail"
        android:layout_marginTop="58dp"
        android:text="Phone Number"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtTitleEmail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtTitleEmail"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleEmail" />

    <TextView
        android:id="@+id/txtContentPhone"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitlePhone"
        android:layout_alignStart="@+id/txtTitlePhone"
        android:layout_alignEnd="@+id/txtTitlePhone"
        android:layout_marginTop="8dp"
        android:text="PhoneNumber"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtTitlePhone"
        app:layout_constraintStart_toStartOf="@+id/txtTitlePhone"
        app:layout_constraintTop_toBottomOf="@+id/txtTitlePhone" />

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginTop="80dp"
        android:text="Edit"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtTitlePhone"
        app:layout_constraintTop_toBottomOf="@+id/txtTitlePhone" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:backgroundTint="#4CAF50"
        android:text="Save"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/txtTitlePhone"
        app:layout_constraintTop_toBottomOf="@+id/txtTitlePhone" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:backgroundTint="#F44336"
        android:text="Cancel"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/txtTitlePhone"
        app:layout_constraintTop_toBottomOf="@+id/txtTitlePhone" />


    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:backgroundTint="#FF9800"
        android:text="Log Out"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txtTitlePhone"
        app:layout_constraintTop_toBottomOf="@+id/txtTitlePhone" />


    <!--    <RelativeLayout-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:orientation="vertical">-->


    <!--        <GridLayout-->
    <!--            android:layout_width="341dp"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:layout_below="@+id/txtContentPhone"-->
    <!--            android:layout_alignStart="@+id/txtContentPhone"-->
    <!--            android:layout_alignEnd="@+id/txtContentPhone"-->
    <!--            android:layout_marginStart="2dp"-->
    <!--            android:layout_marginTop="50dp"-->
    <!--            android:layout_marginEnd="-2dp">-->

    <!--        </GridLayout>-->

    <!--    </RelativeLayout>-->


</androidx.constraintlayout.widget.ConstraintLayout>

